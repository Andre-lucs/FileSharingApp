                          <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="158.0" spacing="10" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
