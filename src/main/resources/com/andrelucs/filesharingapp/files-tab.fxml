                                 <Font name="System Bold" size="12.0" />
                              </font>
                           </Label>
                           <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                 <Image url="@../../../icons/upload-48-white.png" />
                              </image>
